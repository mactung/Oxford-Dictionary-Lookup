{
    "manifest_version": 3,
    "name": "Oxford Dictionary Lookup",
    "version": "1.0.1",
    "description": "Instant Oxford Dictionary lookup, vocabulary builder, and smart practice quizzes.",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "storage",
        "bookmarks",
        "alarms"
    ],
    "host_permissions": [
        "https://www.oxfordlearnersdictionaries.com/*"
    ],
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "chrome_url_overrides": {
        "newtab": "src/newtab/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "assets/index.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
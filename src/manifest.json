{
    "manifest_version": 3,
    "name": "Oxford Dictionary Lookup",
    "version": "1.0",
    "description": "Select text to view Oxford Dictionary definition.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "bookmarks"
    ],
    "host_permissions": [
        "https://www.oxfordlearnersdictionaries.com/*"
    ],
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "action": {},
    "chrome_url_overrides": {
        "newtab": "src/newtab/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "assets/newtab.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}